{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CUDA SCAN",
      "preLaunchTask": "ScanTask",
      "type": "cppdbg",
      "request": "launch",
      "args": ["-m", "scan"],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/cudaScan",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}